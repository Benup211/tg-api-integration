generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model director {
  id      Int     @id @default(autoincrement())
  name    String  @db.VarChar(255)
  movies  movie[]
}

model movie {
  id        Int     @id @default(autoincrement())
  title     String  @db.VarChar(255)
  director  director @relation(fields: [director_id], references: [id])
  director_id Int
  duration  Int
  year      Int
  rating    Float
}